{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "vite.config.ts",
    "_trash_temporary/ManageQuickActions.tsx",
    "_trash_temporary/Sidebar.tsx",
    "_trash_temporary/CourierFinanceManager.tsx",
    "_trash_temporary/SuperRegionalFinanceTab.tsx",
    "_trash_temporary/TopUpHistory.tsx",
    "_trash_temporary/SuperAdminHeader.tsx",
    "_trash_temporary/SuperWithdrawalTab.tsx",
    "_trash_temporary/AdminPromoPage.tsx"
  ],
  "exclude": ["node_modules", "supabase", "dist"]
}
